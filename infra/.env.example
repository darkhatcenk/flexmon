# FlexMON Environment Configuration
# Copy this file to .env and customize values

# Database Configuration
POSTGRES_USER=flexmon
POSTGRES_DB=flexmon
# Note: DB password stored in secrets/db_password.txt

# Elasticsearch Configuration
# Note: Elastic password stored in secrets/elastic_password.txt

# XMPP Configuration
XMPP_ADMIN_PASSWORD=changeme_xmpp_admin

# API Configuration
# Note: API secret key stored in secrets/api_secret.txt

# AI Service Configuration
AI_API_URL=https://ai.cloudflex.tr
# Note: AI token stored in secrets/ai_token.txt

# TLS/mTLS Configuration
ENABLE_MTLS=false

# Gateway Configuration (optional)
CENTRAL_API_URL=http://api:8000
GATEWAY_RATE_LIMIT=1000

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_API_BASE_URL=https://localhost:8443

# S3 Backup Configuration
S3_ENDPOINT=https://s3.cloudflex.tr
S3_BUCKET=flexmon-backups
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# License Configuration
LICENSE_CHECK_INTERVAL_HOURS=24
LICENSE_GRACE_PERIOD_DAYS=7

# Alert Configuration
ALERT_DEDUP_MINUTES=15
ALERT_BATCH_SIZE=100

# Agent Configuration
AGENT_DEFAULT_INTERVAL_SEC=30
AGENT_MIN_INTERVAL_SEC=10
AGENT_MAX_INTERVAL_SEC=300

# Metrics Retention (days)
METRICS_RAW_RETENTION_DAYS=7
METRICS_5MIN_RETENTION_DAYS=30
METRICS_1H_RETENTION_DAYS=365

# Log Retention (days)
LOGS_HOT_RETENTION_DAYS=1
LOGS_WARM_RETENTION_DAYS=7
LOGS_TOTAL_RETENTION_DAYS=90

# Rate Limiting
API_RATE_LIMIT_PER_MIN=1000
METRICS_BATCH_MAX_SIZE_MB=15
METRICS_BATCH_MAX_RECORDS=3000
